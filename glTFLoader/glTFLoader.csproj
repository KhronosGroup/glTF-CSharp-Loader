<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net452</TargetFrameworks>
    <Authors>Matthew and Xueru McMullan</Authors>
    <Copyright>Copyright ©  2015</Copyright>
    <Description>C# reference loader for glTF</Description>
    <Company>Khronos Group</Company>
    <Product>glTFLoader</Product>
    <PackageId>glTFLoader</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/KhronosGroup/glTF/blob/master/loaders/CSharp/README.md</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/KhronosGroup/glTF/blob/master/loaders/CSharp/LICENSE.md</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/KhronosGroup/glTF-CSharp-Loader</RepositoryUrl>
    <PackageIconUrl>https://github.com/KhronosGroup/glTF/blob/master/specification/figures/gltf.png</PackageIconUrl>
    <PackageTags>glTF loader openGL C#</PackageTags>
    <Version>1.0.0.3</Version>
  </PropertyGroup>  

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

</Project>